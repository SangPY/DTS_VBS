                                                         To="0 0 0 0"
                                                         Duration="0:0:0:0.2"
                                                         ></ThicknessAnimation>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger.Actions>
                    </EventTrigger>
