                CornerRadius="0" />

            <Path
                x:Name="Arrow"
                Grid.Column="1"
                Width="10"
                Height="10"
                Margin="0,0,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Data="{StaticResource ArrowDown1}"
                Fill="{StaticResource ComboBoxToggleButtonColor1}"
