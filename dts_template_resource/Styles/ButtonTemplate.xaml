                            CornerRadius="5" />
                        <Border
                            x:Name="LeftBorder"
                            Width="36"
                            Margin="-1"
                            HorizontalAlignment="Left"
                            Background="{TemplateBinding Background}" />
                        <Border
                            x:Name="RightBorder"
                            Grid.Column="1"
                            Width="36"
                            Margin="-1"
                            HorizontalAlignment="Right"
                            Background="{TemplateBinding Background}" />
